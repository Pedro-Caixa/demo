<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Bem-vindo ao Sistema de Produtos"/>
    <Button text="Listar Produtos" onAction="#handleListaProdutos"/>
    <TextArea fx:id="produtoTextArea" prefHeight="200.0" prefWidth="400.0" wrapText="true"/>

</VBox>
